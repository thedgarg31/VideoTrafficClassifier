<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.VideoTrafficClassifier" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/samsung_accent_blue</item>
        <item name="colorPrimaryVariant">@color/samsung_light_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/samsung_light_blue</item>
        <item name="colorSecondaryVariant">@color/samsung_accent_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>
</resources>
