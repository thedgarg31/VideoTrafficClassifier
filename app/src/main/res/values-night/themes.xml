<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.VideoTrafficClassifier" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/samsung_accent_blue</item>
        <item name="colorPrimaryVariant">@color/samsung_light_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/samsung_light_blue</item>
        <item name="colorSecondaryVariant">@color/samsung_accent_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>
    
    <!-- Card style for traffic classification in dark mode -->
    <style name="TrafficCard" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Button style for Samsung branding in dark mode -->
    <style name="SamsungButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/samsung_accent_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Status indicator style in dark mode -->
    <style name="StatusIndicator" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
