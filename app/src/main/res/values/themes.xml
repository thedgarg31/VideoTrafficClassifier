    <style name="Theme.VideoTrafficClassifier" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/samsung_blue</item>
        <item name="colorPrimaryVariant">@color/samsung_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/samsung_light_blue</item>
        <item name="colorSecondaryVariant">@color/samsung_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>
</resources>
